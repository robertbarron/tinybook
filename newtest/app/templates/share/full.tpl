<div id="share-full">
	<div class="share-container">
		<div class="input-container">
			<div class="textarea-container">
				<textarea class="post-comment" placeholder="Share your status"></textarea>
			</div>
			<input type="file" id="post-photo"/>
			<div class="photo-attach">
				<img class="image-preview no-display">
				<div class="photo-share">
					<div class="icon-camera"></div>
					<div class="camera-text">Photo</div>
				</div>
			</div>
		</div>
		<div class="action-buttons">
			<button class="send">Share</button>
			<button class="cancel">Cancel</button>
		</div>
	</div>
</div>