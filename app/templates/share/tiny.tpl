<div class="comment share-tiny">
	<div class="comment-container">
		<div class="top-info">
			<div class="logo">
				<img src="app/images/logos/robert.jpg" />
			</div>
		</div>
		<div class="comment-content">
			<div class="input-container">
				<div class="textarea-container">
					<textarea class="comment-share" placeholder="Share your status"></textarea>
				</div>
				<input type="file" id="comment-photo"/>
				<div class="photo-attach">
					<div class="icon-camera"></div>
				</div>
				<div class="action-buttons">
					<button class="send">Share</button>
				</div>
				<div class="image-preview-container">
					<img class="image-preview">
				</div>
			</div>
		</div>
	</div>
</div>